<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.b8.chris.arduinosmotor.ServoMMotor">

    <TextView
        android:id="@+id/controles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONTROLES"
        android:textAlignment="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/controles"
        android:layout_marginStart="33dp"
        android:layout_marginTop="97dp"
        android:text="izq"
        android:id="@+id/izq" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/izq"
        android:layout_alignBottom="@+id/izq"
        android:layout_marginStart="27dp"
        android:layout_toEndOf="@+id/izq"
        android:text="drc"
        android:id="@+id/drc" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/drc"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="121dp"
        android:text="ADELANTE"
        android:id="@+id/adelante" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/adelante"
        android:layout_below="@+id/drc"
        android:text="     ATRAS   "
        android:id="@+id/atras"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="39dp"
        android:text="CONECTIVIDAD"
        android:id="@+id/conectividad"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="desconectar"
        android:id="@+id/desconectar"/>

    <CheckBox
        android:id="@+id/cAutomatica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Conduccion automatica" />


</RelativeLayout>
